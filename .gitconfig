[user]
	name = Jon Gjengset
	email = jon@thesquareplanet.com
[ui "color"]
	ui = always
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = true
	editor = vim
[merge]
	tool = vimdiff
[alias]
  ci = commit
  st = status
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	ctags = !.git/hooks/ctags
[push]
	default = simple
[help]
	autocorrect = 1
[github]
	user = jonhoo
[init]
	templatedir = ~/.git_template
[diff]
	algorithm = patience
