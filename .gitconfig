[user]
	name = Jon Gjengset
	email = jon@thesquareplanet.com
[ui "color"]
	ui = always
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = true
[merge]
	tool = vimdiff
[alias]
  ci = commit
  st = status
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[push]
	default = simple
[help]
	autocorrect = 1
